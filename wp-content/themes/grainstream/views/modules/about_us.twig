<section class="about-us" id="about-us">
    <div class="container">
        <div class="section-heading">
            <img src="{{ module.section_icon.url }}" alt="{{ module.section_icon.alt }}">
            <h3>{{ module.section_heading_text }}</h3>
        </div>

        <div class="about-us-content grid">
            <div class="img-col">
                <img src="{{ module.image_col.url }}" alt="{{ module.image_col.url }}">
            </div>
            <div class="info-col flex">
                <div class="info-col-content font-ubuntu">
                    {{ module.text_col }}
                </div>
            </div>
        </div>
    </div>
    <div class="background-about-us"> <img src="{{ module.image.url }}" alt="{{ module.image.alt }}"> </div>
</section>