

<div class="preloader" id="preloader">
   <div class="preloader-content">
         <div class="img-col">
            <img src="{{ theme.link ~ "/assets/images/grnsrtrm.svg"}}" alt="">
            <div class="wave"></div>
         </div>
   </div>
</div>
<header class="site-header" id="header">
        
        <div class="header-menu-wrap ">
            <div class="flex header-visible-part">
                <div class="flex left-col">
                    <div class="logo">
                        <a href="{{ function("get_home_url")}}"> <img src="{{options.logo_image.url}}" alt="{{options.logo_image.alt}}"></a>
                    </div>
                </div>
                <div class="flex right-col">
                    <div class="flex media-links-col" style="{{options.media_links_switch[0] == "true" ? "display:none" : "" }}">
                    {% for media in options.header_media_links %}
                       <a href="{{media.media_link.url}}" class="media-header-url"><img src="{{ media.media_icon.url }}" alt="{{ media.media_icon.alt }}"></a>
                    {% endfor %}  
                    </div>
                    <div class="flex language-menu-col">
                       <div class="language-selector">
                          <p class="language current-language">UA</p>
                          {# <p class="language">EN</p> #}
                      </div>
                      <div class="mobile-burger">
                          <p>{{options.menu_button_title}}</p>
                          <img src="{{ options.open_menu_icon.url }}" alt="{{ options.open_menu_icon.alt }}">
                       </div>
                    </div>
                </div> 
            </div>               
            <div class="menu-wrapper">
                <div id="sideNav" class="menu">
                 <div class="languages">
                    <div class="language-selector">
                       <p class="language">UA</p>
                       <p class="language">EN</p>
                    </div>                        
                    <div class="mobile-languages">
                       <a href="{{ options.home_link_url }}"><img src="{{ options.home_link_icon.url }}" alt="{{ options.home_link_icon.alt }}"></a> 
                       <div class="close-menu">
                          <img src="{{ options.close_menu_icon.url }}" alt="{{ options.close_menu_icon.alt }}">
                       </div>
                    </div>
                 </div>
              
                  <ul class="menu-ul">
                     {% for item in options.header_menu %}
                        <li class="menu-item">
                            <a href="{{item.menu_link.url}}" class="" >{{item.menu_link.title}}</a>
                        </li>
                    {% endfor %}                   
                  </ul>
                  <div class="flex media-links-col" style="{{options.media_links_switch[0] == "true" ? "display:none" : "" }}">
                    {% for media in options.header_media_links %}
                        <a href="{{media.media_link.url}}" class="media-header-url">
                           <img src="{{ media.media_icon.url }}" alt="{{ media.media_icon.alt }}">
                        </a>
                    {% endfor %}  
                  </div>
                  <ul class="menu-contacts">
                     {% for con_item in options.header_contacts %}
                        <li>
                           <p>{{ con_item.name }}</p>
                           <a href="{{ con_item.link.url }}">{{ con_item.link.title }}</a>
                        </li>
                     {% endfor %}
                  </ul>

                </div>
             </div>                
        </div>
</header>